@tailwind base;
@tailwind components;
@tailwind utilities;

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 0 0% 3.9%;
    --card: 0 0% 100%;
    --card-foreground: 0 0% 3.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 0 0% 3.9%;
    --primary: 142 76% 36%;
    --primary-foreground: 0 0% 98%;
    --secondary: 0 0% 96.1%;
    --secondary-foreground: 0 0% 9%;
    --muted: 0 0% 96.1%;
    --muted-foreground: 0 0% 45.1%;
    --accent: 142 76% 36%;
    --accent-foreground: 0 0% 9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 89.8%;
    --input: 0 0% 89.8%;
    --ring: 142 76% 36%;
    --radius: 0.5rem;
    --emerald-500: 5 150 105;
    --amber-500: 45 100% 51%;

    /* VIP Gold Colors */
    --gold-light: 45 100% 90%;
    --gold-medium: 45 100% 75%;
    --gold-primary: 45 100% 50%;
    --gold-dark: 45 80% 40%;
    --gold-gradient-start: 45 100% 60%;
    --gold-gradient-end: 36 100% 45%;

    /* Gold palette */
    --gold-50: 45 100% 96%;
    --gold-100: 45 94% 92%;
    --gold-200: 43 89% 86%;
    --gold-300: 42 83% 76%;
    --gold-400: 40 71% 66%;
    --gold-500: 38 57% 56%;
    --gold-600: 36 50% 46%;
    --gold-700: 34 54% 36%;
    --gold-800: 32 58% 28%;
    --gold-900: 30 62% 20%;
    --gold-950: 28 66% 12%;

    --color-navy: #1a2340;
    --color-gold: #e6b800;
    --color-white: #fff;
    --color-bg: #f7f8fa;
    --color-card: #fff;
    --color-border: #e5e7eb;
    --color-text: #1a2340;
    --color-muted: #6b7280;
  }

  .dark {
    --background: 0 0% 3.9%;
    --foreground: 0 0% 98%;
    --card: 0 0% 3.9%;
    --card-foreground: 0 0% 98%;
    --popover: 0 0% 3.9%;
    --popover-foreground: 0 0% 98%;
    --primary: 142 76% 36%;
    --primary-foreground: 0 0% 98%;
    --secondary: 0 0% 14.9%;
    --secondary-foreground: 0 0% 98%;
    --muted: 0 0% 14.9%;
    --muted-foreground: 0 0% 63.9%;
    --accent: 142 76% 36%;
    --accent-foreground: 0 0% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 14.9%;
    --input: 0 0% 14.9%;
    --ring: 142 76% 36%;

    /* VIP Gold Colors - Dark Mode */
    --gold-light: 45 70% 80%;
    --gold-medium: 45 80% 65%;
    --gold-primary: 45 90% 55%;
    --gold-dark: 45 70% 45%;
    --gold-gradient-start: 45 90% 55%;
    --gold-gradient-end: 36 90% 40%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    font-family: 'Inter', system-ui, sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
    margin: 0;
  }
  h1, h2, h3, h4, h5, h6 {
    font-weight: 700;
    color: var(--color-navy);
    margin-bottom: 0.5em;
  }
  .card {
    background: var(--color-card);
    border-radius: 0.75rem;
    box-shadow: 0 2px 8px 0 rgba(26,35,64,0.04);
    border: 1px solid var(--color-border);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }
  .button-primary {
    background: var(--color-navy);
    color: var(--color-gold);
    border-radius: 0.5rem;
    font-weight: 600;
    padding: 0.5rem 1.25rem;
    border: none;
    transition: background 0.2s;
  }
  .button-primary:hover {
    background: #10162a;
  }
}

/* Custom utility classes */
@layer utilities {
  .text-primary {
    color: hsl(var(--primary));
  }

  .text-secondary {
    color: hsl(var(--secondary-foreground));
  }

  .bg-primary {
    background-color: hsl(var(--primary));
  }

  .bg-secondary {
    background-color: hsl(var(--secondary));
  }

  .border-primary {
    border-color: hsl(var(--primary));
  }

  .ring-primary {
    --tw-ring-color: hsl(var(--primary));
  }

  /* VIP Gold Utilities */
  .text-gold {
    color: hsl(var(--gold-primary));
  }

  .bg-gold {
    background-color: hsl(var(--gold-primary));
  }

  .border-gold {
    border-color: hsl(var(--gold-primary));
  }

  .ring-gold {
    --tw-ring-color: hsl(var(--gold-primary));
  }

  .bg-gold-gradient {
    background: linear-gradient(135deg, hsl(var(--gold-gradient-start)) 0%, hsl(var(--gold-gradient-end)) 100%);
  }

  .bg-grid-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cpath d='M0 0h40v40H0z' fill='%23f0f0f0'/%3E%3Cpath d='M0 .5H40M.5 0v40' stroke='%23d0d0d0' stroke-width='.2'/%3E%3C/g%3E%3C/svg%3E");
  }
}

/* QR Scanner animations */
@keyframes scanline {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(256px);
  }
  100% {
    transform: translateY(0);
  }
}

.animate-scanline {
  animation: scanline 3s ease-in-out infinite;
}

/* VIP Badge Animation */
@keyframes shimmer {
  0% {
    background-position: -100% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.animate-shimmer {
  background: linear-gradient(
    90deg,
    rgba(255, 215, 0, 0.1) 0%,
    rgba(255, 215, 0, 0.3) 25%,
    rgba(255, 215, 0, 0.5) 50%,
    rgba(255, 215, 0, 0.3) 75%,
    rgba(255, 215, 0, 0.1) 100%
  );
  background-size: 200% 100%;
  animation: shimmer 3s infinite linear;
}

